extends layout
block content
    h1 LOGIN FORM
    h3 Please login by filling the form below
    form(method='post', action='/users/login', enctype='multipart/form-data')
        .form-group
            label Username
            input.form-control(type='text', name='username', placeholder='username')
        .form-group
            label Password
            input.form-control(type='password', name='password')
        input.btn.btn-primary(type='submit', name='submit', value='LogIn')